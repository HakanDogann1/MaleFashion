@model List<ResultBlogModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Blog Tablosu</p>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="example" class="display expandable-table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Yazar Kullanıcı Adı</th>
                                        <th>İçerik</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.Title</td>
                                        <td>@item.AuthorUserName</td>
                                        <td>@item.Description</td>
                                        <td>@DateTime.Parse(@item.CreatedDate).ToString("G")</td>
                                        <td>
                                            <button class="btn btn-outline-danger" asp-action="DeleteBlog" asp-controller="Blog" asp-route-id="@item.Id">Sil</button>
                                            &nbsp;
                                            <button class="btn btn-outline-warning" asp-action="UpdateBlog" asp-controller="Blog" asp-route-id="@item.Id">Güncelle</button>
                                        </td>
                                    </tr>
                                }
                            </table>
                            <br />
                            <a href="#" class="btn btn-outline-success">Blog Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

